@model TravelAgency.Models.Model.DataSearchVM
@{
    ViewBag.Title = "SearchTour";
}
    <div class="row">
        <div class="col-3 justify-content-center text-center">
            @Html.Partial("Filter", Model.Filter)

        </div>
        <div class="col-8 render-body">
            @foreach (var item in Model.Tours.Tours)
            {
                <div class="card text-white bg-dark mb-3  text-center ">
                    <p class="card-header bg-warning">@item.Name</p>
                    <div class="card-body">
                        <p class="card-subtitle mb-2 text-muted">Туда: @item.DepartureData.ToShortDateString() / Обратно: @item.ArrivalDate.Date.ToShortDateString()</p>
                        <div class="card-text">
                            <p>Цена: @item.Price</p>
                            <p>Гостиница: @item.Hotel.Name</p>
                            <p>Количество людей: @item.PeopleCount</p>
                            <p>Тип тура: @item.TourType</p>
                            <p>Статус тура: @item.TourState</p>
                            </div>
                        </div>
                    <button name="button" id="more-details" class="btn btn-light" type="submit">
                        @Html.ActionLink("Подробнее", "MoreDetailsATour", "Home", new { id = item.Id }, null)
                    </button>
                </div>

            }
        </div>

    </div>
