@model TravelAgency.Models.UserModel.LoginData
@{
    ViewBag.Title = "Entrance";
}
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    
<div class="row justify-content-center ">
    <div class="col-3 justify-content-center text-center">
      
            <div class="card text-white bg-dark mb-3  text-center ">
                <p class="card-header bg-info">Вход</p>
                <div class="card-body">
                    <div class="card-text">
                        @Html.LabelFor(x => x.Login)
                        @Html.ValidationMessageFor(x => x.Login)
                        @Html.EditorFor(x => x.Login, new { placeholder = "log" })

                        @Html.LabelFor(x => x.Password)
                        @Html.ValidationMessageFor(x => x.Password)
                        @Html.EditorFor(x => x.Password, new { placeholder = "pas " })
                        <p></p>
                        <button type="submit" id="more-details" class="btn btn-light">Войти</button>
                    </div>
                </div>
            </div>
       
    </div>
</div> }