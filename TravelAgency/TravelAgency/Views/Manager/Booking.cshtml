@using TravelAgency.Models.Model
@model TravelAgency.Models.ToursVM
@{
    ViewBag.Title = "Booking";
}

@foreach (var item in Model.Tours)
{
    if (item.TourState != TourState.Paid && item.TourState != TourState.Canceled)
    {
    <div class="row justify-content-center">
        <div class="col-7  text-center">
            <div class="card text-white bg-dark mb-3 ">
                <p class="card-header bg-primary">@item.Name</p>
                <div class="card-body">
                    <div class="card-text">
                        <p>Статус заказа: @item.TourState</p>
                        <p>Логин пользователя: @item.BookedBy.Login</p>
                        @Html.ActionLink("Оплачен", "Paid", "Manager", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-lg active" })

                        @Html.ActionLink("Отменен", "Canceled", "Manager", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-lg active" })

                    </div>
                </div>
            </div>
        </div>
    </div>
            }
            }
