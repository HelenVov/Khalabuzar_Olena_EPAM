@model TravelAgency.Models.UserModel.UsersVM
@{
    ViewBag.Title = "AllUser";
}

<div class="row justify-content-center ">
    <div class="col-5 justify-content-center text-center">
        @foreach (var item in Model.Users)
        {
        <div class="card text-white bg-dark mb-3  text-center ">
            <p class="card-header bg-primary">Логин пользователя: @item.Login</p>
            <div class="card-body">
                <div class="card-text">
                    <p>Имя пользователя: @item.LastName  @item.FirstName</p>

                    @if (item.Block)
                    {
                        @Html.ActionLink("Разблокировать", "Unblock", "Administrator", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-lg active" })
                    }
                    else
                    {
                        @Html.ActionLink("Блокировать", "Block", "Administrator", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-lg active" })

                    }
                </div>
            </div>
        </div>
        }
    </div>
</div>

    }


